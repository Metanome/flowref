{
  "manifest_version": 3,
  "name": "FlowRef",
  "version": "0.3.0",
  "description": "Fast DOI-based citation generator - Open-source, privacy-friendly citation tool for students and researchers",
  "icons": {
    "16": "icons/Icon16.png",
    "48": "icons/Icon48.png",
    "128": "icons/Icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/Icon16.png",
      "48": "icons/Icon48.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.crossref.org/*",
    "https://api.datacite.org/*",
    "https://doi.org/*"
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": true,
      "js": ["content/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdfjs/pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "flowref@metanome.proton.me",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
