{
  "name": "flowref",
  "version": "0.3.1",
  "description": "Fast DOI-based citation generator - Open-source, privacy-friendly citation tool",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run bundle && npm run build:copy",
    "bundle": "esbuild src/popup/popup.ts --bundle --outfile=dist/popup/popup.js --format=iife && esbuild src/options/options.ts --bundle --outfile=dist/options/options.js --format=iife && esbuild src/background/background.ts --bundle --outfile=dist/background/background.js --format=iife && esbuild src/settings/settings.ts --bundle --outfile=dist/settings/settings.js --format=iife",
    "build:copy": "npm run copy:manifest && npm run copy:html && npm run copy:css && npm run copy:icons && npm run copy:content && npm run copy:pdfjs && npm run copy:core",
    "copy:manifest": "node -e \"require('fs').copyFileSync('manifest.json', 'dist/manifest.json')\"",
    "copy:html": "node -e \"const fs=require('fs'); fs.copyFileSync('src/popup/popup.html','dist/popup/popup.html'); fs.copyFileSync('src/options/options.html','dist/options/options.html'); fs.copyFileSync('src/settings/settings.html','dist/settings/settings.html');\"",
    "copy:css": "node -e \"const fs=require('fs'); fs.copyFileSync('src/popup/popup.css','dist/popup/popup.css'); fs.copyFileSync('src/options/options.css','dist/options/options.css'); fs.copyFileSync('src/settings/settings.css','dist/settings/settings.css');\"",
    "copy:icons": "node -e \"const fs=require('fs'); if(fs.existsSync('icons')) { fs.mkdirSync('dist/icons', {recursive:true}); fs.readdirSync('icons').forEach(f=>fs.copyFileSync('icons/'+f,'dist/icons/'+f)); }\"",
    "copy:content": "node -e \"const fs=require('fs'); fs.mkdirSync('dist/content', {recursive:true}); fs.copyFileSync('src/content/contentScript.js','dist/content/contentScript.js');\"",
    "copy:pdfjs": "node -e \"const fs=require('fs'); fs.mkdirSync('dist/pdfjs', {recursive:true}); fs.copyFileSync('node_modules/pdfjs-dist/build/pdf.worker.min.js','dist/pdfjs/pdf.worker.min.js');\"",
    "copy:core": "node -e \"\"",
    "watch": "npm run bundle -- --watch",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\""
  },
  "keywords": [
    "citation",
    "doi",
    "academic",
    "research",
    "firefox-extension",
    "chrome-extension"
  ],
  "author": "Dr. Skinner <metanome@proton.me>",
  "license": "GPL-3.0",
  "dependencies": {
    "@citation-js/core": "^0.7.21",
    "@citation-js/plugin-csl": "^0.7.21",
    "@citation-js/plugin-doi": "^0.7.21",
    "pdfjs-dist": "^3.11.174"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/firefox-webext-browser": "^120.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.3"
  }
}
